# Include documentation
include README.md
include LICENSE
include CLAUDE.md

# Include requirements
include requirements.txt
include requirements-dev.txt

# Include version and build files
include VERSION
include BUILD_NUMBER
include src/claude_mpm/VERSION
include src/claude_mpm/BUILD_NUMBER

# Include all agent templates and instructions
recursive-include src/claude_mpm/agents *.md *.json
recursive-include src/claude_mpm/agents/templates *.json
recursive-include src/claude_mpm/framework *.md *.json

# Include scripts
include scripts/ticket
include scripts/run_mpm.py
include claude-mpm
include ticket

# Include configuration examples
recursive-include src/claude_mpm/config *.py

# Include hook files (including shell scripts)
recursive-include src/claude_mpm/hooks *.py *.sh

# Include package scripts
recursive-include src/claude_mpm/scripts *.py

# Include dashboard templates and static files
recursive-include src/claude_mpm/dashboard *.html *.css *.js *.json
recursive-include src/claude_mpm/dashboard/templates *.html
recursive-include src/claude_mpm/dashboard/static *.css *.js *.json

# Exclude test and cache files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
recursive-exclude tests *
recursive-exclude docs *
